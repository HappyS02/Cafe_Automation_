<!DOCTYPE html>
<html lang="tr"> 

<head>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CafeOtomasyon.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>

<body>
    <div class="d-flex" id="wrapper">

        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Menü </div>
            <div class="list-group list-group-flush">
                @* Kat Planı: Herkes *@
                <a asp-controller="Tables" asp-action="FloorPlan" class="list-group-item list-group-item-action bg-light"><i class="fas fa-th-large"></i> Kat Planı</a>

                @* Kategoriler: Yönetici veya Kasiyer *@
                @if (User.IsInRole(AppRoles.Yönetici) || User.IsInRole(AppRoles.Kasiyer))
                {
                    <a asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-tags"></i> Kategoriler</a>
                }

                @* Ürünler: Yönetici veya Kasiyer *@
                @if (User.IsInRole(AppRoles.Yönetici) || User.IsInRole(AppRoles.Kasiyer))
                {
                    <a asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-utensils"></i> Ürünler</a>
                }

                @* Masa Yönetimi: Yönetici veya Kasiyer *@
                @if (User.IsInRole(AppRoles.Yönetici) || User.IsInRole(AppRoles.Kasiyer))
                {
                    <a asp-controller="Tables" asp-action="Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-chair"></i> Masa Yönetimi</a>
                }

                @* Siparişler: *@
                @if (User.IsInRole(AppRoles.Yönetici) || User.IsInRole(AppRoles.Kasiyer))
                {
                    <a asp-controller="Orders" asp-action="ActiveOrders" class="list-group-item list-group-item-action bg-light"><i class="fas fa-clipboard-list"></i> Aktif Siparişler</a>
                }

                @* Sipariş Geçmişi: Yönetici veya Kasiyer *@
                @if (User.IsInRole(AppRoles.Yönetici) || User.IsInRole(AppRoles.Kasiyer))
                {
                    <a asp-controller="Orders" asp-action="History" class="list-group-item list-group-item-action bg-light"><i class="fas fa-history"></i> Sipariş Geçmişi</a>
                }

                @* Raporlar: Yönetici veya Kasiyer *@
                @if (User.IsInRole(AppRoles.Yönetici) || User.IsInRole(AppRoles.Kasiyer))
                {
                    <a asp-controller="Reports" asp-action="DailySales" class="list-group-item list-group-item-action bg-light"><i class="fas fa-chart-line"></i> Günlük Rapor</a>
                }

                <!--<a asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-users"></i> Kullanıcılar</a>-->
                @* Kullanıcılar: Sadece Yönetici *@
                @if (User.IsInRole(AppRoles.Yönetici))
                {
                    <a asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-user-shield"></i> Kullanıcı Yönetimi</a>
                }
            </div>
        </div>
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-bars"></i></button>

                    <a class="navbar-brand mx-auto" href="#">Kafe Yönetim Sistemi</a>

                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user"></i> @User.Identity.Name
                            </a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Profil</a>
                                <a class="dropdown-item" href="#">Ayarlar</a>
                                <div class="dropdown-divider"></div>
                                <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item">Çıkış Yap</button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <main role="main" class="container-fluid p-4">
                @RenderBody()
            </main>

        </div>
    </div>

    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - KafeYonetimSistemi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


    <script>
        // Menü toggle butonu için event listener
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>

</html>