@using CafeOtomasyon.Data
@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 text-center p-5" style="max-width: 600px; width: 100%; border-radius: 20px;">

        <div class="mb-4">
            <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                <i class="fas fa-mug-hot fa-4x"></i>
            </div>
            <h1 class="display-5 fw-bold text-dark">Hoş Geldiniz!</h1>
            <h3 class="text-primary">@User.Identity.Name</h3>

            <p class="text-muted mt-3">
                Sisteme başarıyla giriş yaptınız.
                <br />
                <span class="badge bg-secondary mt-2">
                    @if (User.IsInRole(AppRoles.Yönetici))
                    {
                        <span>YÖNETİCİ</span>
                    }
                    else if (User.IsInRole(AppRoles.Kasiyer))
                    {

                        <span>KASİYER</span>
                    }
                    else if (User.IsInRole(AppRoles.Garson))
                    {

                        <span>GARSON</span>
                    }
                    else
                    {

                        <span>MÜŞTERİ</span>
                    }
                </span>
            </p>
        </div>

        <hr class="my-4" />

        <div class="d-grid gap-3">

            @if (User.IsInRole(AppRoles.Yönetici) || User.IsInRole(AppRoles.Kasiyer) || User.IsInRole(AppRoles.Garson))
            {
                <a asp-controller="Tables" asp-action="FloorPlan" class="btn btn-primary btn-lg shadow-sm">
                    <i class="fas fa-th-large me-2"></i> Yönetim Paneline Git
                </a>
            }

            <a asp-controller="Home" asp-action="Menu" class="btn btn-outline-success btn-lg shadow-sm">
                <i class="fas fa-book-open me-2"></i> Menüyü İncele & Değerlendir
            </a>

            <form asp-controller="Account" asp-action="Logout" method="post" class="d-grid">
                <button type="submit" class="btn btn-link text-danger text-decoration-none mt-2">
                    <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                </button>
            </form>

        </div>
    </div>
</div>