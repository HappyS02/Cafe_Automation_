@model IEnumerable<CafeOtomasyon.Models.UserModel>
@using CafeOtomasyon.Data

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-users-cog text-primary"></i> Kullanıcı Yönetimi</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Yeni Kullanıcı Ekle
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Ad Soyad</th>
                        <th>Kullanıcı Bilgileri</th>
                        <th>Rol</th>
                        <th class="text-center">Durum</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.Name</td>
                            <td>
                                <div><i class="fas fa-user-circle text-muted"></i> @item.Username</div>
                                <small class="text-muted"><i class="fas fa-envelope"></i> @item.Email</small>
                            </td>
                            <td>
    @if (item.Role == AppRoles.Yönetici) { <span class="badge bg-danger">YÖNETİCİ</span> }
    else if (item.Role == AppRoles.Kasiyer) { <span class="badge bg-warning text-dark">KASİYER</span> }
    else if (item.Role == AppRoles.Garson) { <span class="badge bg-primary">GARSON</span> } else { <span class="badge bg-info text-dark">MÜŞTERİ</span> }
</td>
                            
                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <i class="fas fa-check-circle fa-lg text-success" title="Aktif"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle fa-lg text-danger" title="Pasif"></i>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <form asp-action="ToggleStatus" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary" title="Durumu Değiştir">
                                            <i class="fas fa-power-off"></i>
                                        </button>
                                    </form>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <form asp-action="Delete" method="post" onsubmit="return confirm('@item.Name kullanıcısını silmek istediğinize emin misiniz?');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>