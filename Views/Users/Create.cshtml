@model CafeOtomasyon.Models.UserModel
@using CafeOtomasyon.Data

@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus"></i> Yeni Kullanıcı Ekle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ad Soyad</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Ali Yılmaz" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı Adı</label>
                            <input asp-for="Username" class="form-control" placeholder="Giriş için kullanılacak" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">E-Posta</label>
                            <input asp-for="Email" class="form-control" placeholder="mail@ornek.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Şifre</label>
                            <input asp-for="Password" class="form-control" placeholder="******" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı Rolü</label>
                            <select asp-for="Role" class="form-select">
                                <option value="@AppRoles.Musteri">Müşteri</option>
                                <option value="@AppRoles.Kasiyer">Kasiyer</option>
                                <option value="@AppRoles.Garson">Garson</option>
                                <option value="@AppRoles.Yönetici">Yönetici</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>