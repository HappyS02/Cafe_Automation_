@model CafeOtomasyon.Models.UserModel
@using CafeOtomasyon.Data

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-edit"></i> Kullanıcı Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ad Soyad</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı Adı</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">E-Posta</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-danger">Yeni Şifre</label>
                            <input asp-for="Password" value="" type="text" class="form-control border-danger" placeholder="Değiştirmek istemiyorsanız boş bırakın" />
                            <small class="text-muted">Mevcut şifreyi korumak için burayı boş bırakın.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı Rolü</label>
                            <select asp-for="Role" class="form-select bg-light border-primary">
                                <option value="@AppRoles.Yönetici">Yönetici</option>
                                <option value="@AppRoles.Kasiyer">Kasiyer</option>
                                <option value="@AppRoles.Garson">Garson</option>
                                <option value="@AppRoles.Musteri">Müşteri</option>
                            </select>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                            <label class="form-check-label fw-bold" asp-for="IsActive">Hesap Aktif</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Değişiklikleri Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>