@model IEnumerable<CafeOtomasyon.Models.CategoryModel>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Kategori Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Kategori Ekle
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Kategori ara..." value="@ViewData["CurrentFilter"]">
            <button class="btn btn-outline-secondary" type="submit">Ara</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Sıfırla</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Durum</th>
                        <th class="text-end" style="width: 200px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@item.Name</td>
                            <td class="align-middle">
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Düzenle">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Sil">
                                    <i class="fas fa-trash-alt"></i>
                                </a>

                                <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    @if (item.IsActive)
                                    {
                                        <button type="submit" class="btn btn-secondary btn-sm" title="Pasif Yap">
                                            <i class="fas fa-toggle-off"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-success btn-sm" title="Aktif Et">
                                            <i class="fas fa-toggle-on"></i>
                                        </button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>