@model IEnumerable<CafeOtomasyon.Models.ProductModel>
@using CafeOtomasyon.Data

@{
    ViewData["Title"] = "Menü";
    // Müşteriye özel layout seçimi
    if (User.IsInRole(AppRoles.Musteri))
    {
        Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    }
}

<div class="text-center mb-4">
    <h2 class="fw-bold text-dark d-block d-sm-none">Lezzetleri Keşfet</h2> <h1 class="display-5 fw-bold text-primary d-none d-sm-block">Lezzetleri Keşfet</h1> <p class="text-muted small">Beğendiğiniz ürünlere tıklayıp yorum yapabilirsiniz.</p>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center shadow-sm rounded-3 p-4">
        <i class="fas fa-cookie-bite fa-3x mb-3 text-warning"></i><br />
        Henüz menüye ürün eklenmemiş. Çok yakında!
    </div>
}
else
{
    @foreach (var group in Model.GroupBy(p => p.Category?.Name).OrderBy(g => g.Key))
    {
        <div class="sticky-top bg-white py-2 mb-3 shadow-sm px-3 rounded-3 border" style="top: 70px; z-index: 900;">
            <h5 class="mb-0 fw-bold text-dark">
                <i class="fas fa-utensils me-2 text-primary"></i> @(group.Key ?? "Diğer")
            </h5>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-3 mb-5">
            @foreach (var product in group)
            {
                <div class="col">
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden product-card">

                            <div class="card-img-top position-relative bg-white d-flex align-items-center justify-content-center p-2" style="height: 180px;">
                                @if (!string.IsNullOrEmpty(product.ImageName))
                                {
                                    <img src="~/img/products/@product.ImageName" class="img-fluid rounded-3" style="max-height: 100%; object-fit: contain;" alt="@product.Name" />
                                }
                                else
                                {
                                    <i class="fas fa-hamburger fa-4x text-black-50 opacity-25"></i>
                                }
                                <span class="position-absolute top-0 end-0 bg-success text-white px-3 py-1 m-2 rounded-pill fw-bold shadow-sm small">
                                    @product.Price.ToString("C2")
                                </span>
                            </div>

                            <div class="card-body d-flex flex-column p-3 bg-light bg-opacity-50">
                                <h6 class="card-title fw-bold mb-1 text-truncate">@product.Name</h6>
                                <p class="card-text text-muted small text-truncate mb-3">@product.Description</p>

                                <div class="mt-auto text-end">
                                    <span class="btn btn-sm btn-outline-primary rounded-pill px-3 stretched-link">
                                        İncele & Yorumla <i class="fas fa-chevron-right ms-1 small"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
}

<style>
    /* Kartlara tıklama efekti */
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .product-card:active {
            transform: scale(0.98);
        }
    /* Mobilde dokunma hissi */
    @@media (min-width: 768px) {
        .product-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
    }
</style>