@model CafeOtomasyon.Models.OrderModel

@{
    ViewData["Title"] = "Sipariş Detayı";

    // Süreyi hesaplamak için (History sayfasındakiyle aynı mantık)
    string durationString = "Hesaplanamadı";
    if (Model.CloseTime.HasValue)
    {
        TimeSpan duration = Model.CloseTime.Value - Model.OpenTime;
        if (duration.TotalMinutes < 1) { durationString = $"{duration.Seconds} sn"; }
        else if (duration.TotalHours < 1) { durationString = $"{duration.Minutes} dk"; }
        else { durationString = $"{(int)duration.TotalHours} sa {duration.Minutes} dk"; }
    }
}

<h1>Sipariş Detayı (#@Model.Id)</h1>

<div>
    <h4>Özet Bilgiler</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Masa</dt>
        <dd class="col-sm-9">@(Model.Table?.Name ?? "Silinmiş Masa")</dd>

        <dt class="col-sm-3">Açılış Saati</dt>
        <dd class="col-sm-9">@Model.OpenTime.ToString("dd.MM.yyyy HH:mm:ss")</dd>

        <dt class="col-sm-3">Kapanış Saati</dt>
        <dd class="col-sm-9">@(Model.CloseTime?.ToString("dd.MM.yyyy HH:mm:ss") ?? "-")</dd>

        <dt class="col-sm-3">Geçen Süre</dt>
        <dd class="col-sm-9">@durationString</dd>

        <dt class="col-sm-3">Toplam Tutar</dt>
        <dd class="col-sm-9">@Model.TotalAmount.ToString("C")</dd>

        <dt class="col-sm-3">Ödeme Durumu</dt>
        <dd class="col-sm-9">
            @if (Model.IsPaid)
            {
                <span class="badge bg-success">Ödendi</span>
            }
            else
            {

                <span class="badge bg-danger">Ödenmedi</span>
            }
        </dd>
    </dl>
</div>
<hr />

<h4>Sipariş İçeriği</h4>
@if (Model.OrderDetails == null || !Model.OrderDetails.Any())
{
    <p>Bu siparişe ait ürün detayı bulunamadı.</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Birim Fiyat (O anki)</th>
                <th class="text-end">Satır Toplamı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@(item.Product?.Name ?? "Silinmiş Ürün")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td class="text-end">@((item.Quantity * item.Price).ToString("C"))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Genel Toplam:</strong></td>
                <td class="text-end"><strong>@Model.TotalAmount.ToString("C")</strong></td>
            </tr>
        </tfoot>
    </table>
}

<div class="mt-3">
    <a asp-action="History" class="btn btn-secondary">Sipariş Geçmişine Geri Dön</a>
</div>