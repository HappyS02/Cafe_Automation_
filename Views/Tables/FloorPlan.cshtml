@model IEnumerable<IGrouping<string, CafeOtomasyon.Models.TableModel>>

@{
    ViewData["Title"] = "Kat Planı";
}

<div class="row mb-3">
    <div class="col-auto">
        <span class="badge bg-success p-2">BOŞ</span>
    </div>
    <div class="col-auto">
        <span class="badge bg-danger p-2">DOLU</span>
    </div>
    <div class="col-auto">
        <span class="badge bg-warning text-dark p-2">REZERVE</span>
    </div>
</div>

<div class="container-fluid px-0">

    @foreach (var locationGroup in Model)
    {
        <h2 class="mt-4 border-bottom text-primary">@locationGroup.Key</h2>

        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-3 mb-4">

            @foreach (var table in locationGroup)
            {
                // Başlangıç Renk Ayarları
                string cardColorClass = "bg-success text-white"; // Varsayılan: Boş
                string iconClass = "fa-chair"; // Varsayılan İkon

                if (table.Status == CafeOtomasyon.Models.TableStatus.Dolu)
                {
                    cardColorClass = "bg-danger text-white";
                    iconClass = "fa-utensils"; // Doluysa çatal bıçak
                }
                else if (table.Status == CafeOtomasyon.Models.TableStatus.Rezerve)
                {
                    cardColorClass = "bg-warning text-dark";
                    iconClass = "fa-clock"; // Rezerveyse saat (veya sandalye)
                }

                <div class="col">
                    <a href="#"
                       class="text-decoration-none"
                       data-bs-toggle="modal"
                       data-bs-target="#tableModal"
                       data-table-id="@table.Id"
                       data-table-name="@table.Name">

                        <div id="table-card-@table.Id" class="card h-100 shadow-sm border-0 text-center p-3 @cardColorClass">

                            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                                <h5 class="card-title fw-bold">@table.Name</h5>

                                <i class="status-icon fas @iconClass fa-3x mb-3"></i>

                                <p class="card-text mb-0"><i class="fas fa-users me-1"></i> @table.Capacity Kişilik</p>

                                <span class="status-text badge bg-white bg-opacity-25 mt-2 fs-6">
                                    @table.Status.ToString()
                                </span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>


<div class="modal fade" id="tableModal" tabindex="-1" aria-labelledby="tableModalLabel">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tableModalLabel">Masa Detayları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3 id="modalTableName">Yükleniyor...</h3>
                <hr>

                <div class="mb-3">
                    <strong>Durumu Değiştir:</strong>
                    <button id="btnMakeAvailable" class="btn btn-success" style="display: none;">BOŞ YAP</button>
                    <button id="btnMakeOccupied" class="btn btn-danger" style="display: none;">DOLU YAP</button>
                    <button id="btnMakeReserved" class="btn btn-warning" style="display: none;">REZERVE YAP</button>
                </div>
                <hr>

                <div id="orderSection" style="display: none;">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h4>Sipariş</h4>
                        <button id="btnShowProductModal" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productSelectModal">
                            <i class="fas fa-plus"></i> Siparişe Ürün Ekle
                        </button>
                    </div>

                    <div id="orderDetails">
                        <p>Bu masaya ait aktif bir sipariş bulunmuyor.</p>
                    </div>
                </div>
                <div id="printButtonSection" style="display: none;" class="mt-2 text-end">
                     <button id="btnPrintReceipt" class="btn btn-info btn-sm">
                         <i class="fas fa-print"></i> Adisyon Yazdır
                     </button>
                </div>

                <h4 class="text-end mt-3">Toplam Tutar: <span id="totalAmount">0,00 TL</span></h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                @* Ödeme Butonu *@
                @if (User.IsInRole("Yönetici") || User.IsInRole("Kasiyer"))
                {
                    <button type="button" class="btn btn-success" id="btnPayment" style="display: none;">ÖDEME AL</button>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="productSelectModal" tabindex="-1" aria-labelledby="productSelectModalLabel">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="productSelectModalLabel">
                    <i class="fas fa-utensils me-2"></i>Ürün Ekle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body bg-light">
                <div id="productCardContainer" class="d-flex flex-wrap justify-content-center gap-2">
                    <div class="text-center w-100 p-4">
                        <div class="spinner-border text-primary"></div>
                        <p>Ürünler yükleniyor...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // --- 1. TANIMLAMALAR ---
        var tableModalEl = document.getElementById('tableModal');
        var tableModal = new bootstrap.Modal(tableModalEl);
        var productModalEl = document.getElementById('productSelectModal');
        var productModalInstance = new bootstrap.Modal(productModalEl);

        var currentTableId = 0;
        var currentOrderId = 0;

        // --- 2. MASA DETAY MODALI AÇILINCA ---
        tableModalEl.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            if (!button) return;

            var tableName = button.getAttribute('data-table-name');
            currentTableId = button.getAttribute('data-table-id');

            document.getElementById('modalTableName').textContent = tableName;
            document.getElementById('orderDetails').innerHTML = '<div class="text-center p-3"><div class="spinner-border text-primary"></div><br>Veriler getiriliyor...</div>';
            document.getElementById('totalAmount').innerText = '...';

            refreshOrderDetails(currentTableId);
        });

        // --- 3. VERİLERİ YENİLE ---
        function refreshOrderDetails(tableId) {
            fetch(`/Tables/GetTableDetails/${tableId}`)
                .then(res => res.json())
                .then(data => {
                    // Butonları ve Arayüzü Güncelle
                    updateActionButtons(data.status);

                    // *** YENİ: Masanın Rengini Anlık Güncelle (Sayfa yenilemeden) ***
                    updateTableVisual(tableId, data.status);

                    // Müşteri Masası Kontrolü
                    var prodBtn = document.getElementById('btnShowProductModal');
                    var alertBox = document.getElementById('custAlert');

                    if(data.isCustomerTable) {
                        if(prodBtn) prodBtn.style.display = 'none';
                        if (!alertBox) {
                            var div = document.createElement('div');
                            div.id = 'custAlert';
                            div.className = 'alert alert-warning mt-2';
                            div.innerHTML = '<i class="fas fa-lock"></i> Müşteri Masası';
                            document.getElementById('orderDetails').before(div);
                        }
                    } else {
                        if(prodBtn && data.status === 'Dolu') prodBtn.style.display = 'block';
                        if(alertBox) alertBox.remove();
                    }

                    if (data.success && data.details) {
                        currentOrderId = data.orderId;
                        document.getElementById('totalAmount').innerText = formatMoney(data.totalAmount);
                        renderTable(data.details);
                    } else {
                        currentOrderId = 0;
                        document.getElementById('orderDetails').innerHTML = '<div class="alert alert-secondary">Sipariş yok.</div>';
                        document.getElementById('totalAmount').innerText = '0,00 TL';
                    }
                });
        }

        // --- 4. GÖRSEL GÜNCELLEME FONKSİYONU (SİHİRLİ KISIM) ---
        function updateTableVisual(id, status) {
            var card = document.getElementById('table-card-' + id);
            if (!card) return; // Kart bulunamazsa çık

            var icon = card.querySelector('.status-icon');
            var text = card.querySelector('.status-text');

            // Tüm renkleri sil
            card.classList.remove('bg-success', 'bg-danger', 'bg-warning', 'text-white', 'text-dark');

            if (status === 'Dolu') {
                card.classList.add('bg-danger', 'text-white');
                if(icon) icon.className = 'status-icon fas fa-utensils fa-3x mb-3';
                if(text) text.textContent = 'Dolu';
            } else if (status === 'Rezerve') {
                card.classList.add('bg-warning', 'text-dark');
                if(icon) icon.className = 'status-icon fas fa-chair fa-3x mb-3';
                if(text) text.textContent = 'Rezerve';
            } else {
                // Varsayılan: Boş
                card.classList.add('bg-success', 'text-white');
                if(icon) icon.className = 'status-icon fas fa-chair fa-3x mb-3';
                if(text) text.textContent = 'Boş';
            }
        }

        // --- 5. İŞLEM BUTONLARI ---

        // Masayı Dolu Yap
        document.getElementById('btnMakeOccupied').addEventListener('click', function() {
            fetch(`/Tables/StartOrder/${currentTableId}`, { method: 'POST' })
                .then(r => r.json()).then(d => {
                    if(d.success) refreshOrderDetails(currentTableId);
                });
        });

        // Masayı Boşalt
        document.getElementById('btnMakeAvailable').addEventListener('click', function() {
            if(!confirm("Masa boşaltılsın mı?")) return;
            fetch(`/Tables/CloseOrder/${currentTableId}`, { method: 'POST' })
                .then(r => r.json()).then(d => {
                    if(d.success) refreshOrderDetails(currentTableId);
                });
        });

        // Rezerve Et
        document.getElementById('btnMakeReserved').addEventListener('click', function() {
            fetch(`/Tables/ReserveTable/${currentTableId}`, { method: 'POST' })
                .then(r => r.json()).then(d => {
                    if(d.success) refreshOrderDetails(currentTableId);
                });
        });

        // Ödeme Al
        var btnPay = document.getElementById('btnPayment');
        if (btnPay) {
            btnPay.addEventListener('click', function() {
                if (currentOrderId === 0) return;
                if (confirm("Ödeme alındı mı?")) {
                    fetch(`/Orders/MarkOrderAsPaid?orderId=${currentOrderId}`, { method: 'POST' })
                        .then(r => r.json())
                        .then(data => {
                            if (data.success) {
                                tableModal.hide(); // Modalı kapat
                                // Masayı yeşil yap
                                updateTableVisual(currentTableId, 'Boş');
                                alert("Ödeme alındı.");
                            }
                        });
                }
            });
        }

        // --- 6. ÜRÜN İŞLEMLERİ (Ekle/Sil/Güncelle) ---
        // Ürün Modalı Açılınca
        productModalEl.addEventListener('show.bs.modal', function () {
            var container = document.getElementById('productCardContainer');
            container.innerHTML = '<div class="text-center mt-5"><div class="spinner-border text-primary"></div></div>';

            fetch('/Orders/GetActiveProducts')
                .then(r => r.json())
                .then(products => {
                    container.innerHTML = '';
                    products.forEach(p => {
                         let imgHtml = p.imageName
                            ? `<img src="/img/products/${p.imageName}" class="card-img-top" style="height: 80px; object-fit: contain;">`
                            : `<div class="d-flex align-items-center justify-content-center bg-light" style="height: 80px;"><i class="fas fa-hamburger fa-2x text-secondary opacity-50"></i></div>`;

                        container.innerHTML += `
                            <div class="card shadow-sm m-1" style="width: 130px; cursor: pointer;" onclick="addProductToTable(${p.id})">
                                <div class="p-2">${imgHtml}</div>
                                <div class="card-body p-2 text-center">
                                    <h6 class="small fw-bold mb-1 text-truncate">${p.name}</h6>
                                    <span class="badge bg-success">${formatMoney(p.price)}</span>
                                </div>
                            </div>`;
                    });
                });
        });

        function addProductToTable(productId) {
            if (currentOrderId === 0) { alert("Önce masa açın!"); return; }
            fetch(`/Orders/AddItemToOrder?orderId=${currentOrderId}&productId=${productId}&quantity=1`, { method: 'POST' })
                .then(r => r.json())
                .then(d => { if(d.success) refreshOrderDetails(currentTableId); });
        }

        function updateQty(detailId, change) {
            fetch(`/Orders/UpdateItemQuantity?orderDetailId=${detailId}&quantityChange=${change}`, { method: 'POST' })
                .then(r => r.json()).then(d => { if(d.success) refreshOrderDetails(currentTableId); });
        }

        function deleteItem(detailId) {
            if(!confirm("Silinsin mi?")) return;
            fetch(`/Orders/RemoveItemFromOrder?orderDetailId=${detailId}`, { method: 'POST' })
                .then(r => r.json()).then(d => { if(d.success) refreshOrderDetails(currentTableId); });
        }

        // --- 7. TABLO ÇİZİMİ ve YARDIMCILAR ---
        function renderTable(items) {
            if (!items || items.length === 0) {
                document.getElementById('orderDetails').innerHTML = '<div class="alert alert-warning">Ürün yok.</div>';
                return;
            }
            let html = `<table class="table table-striped align-middle"><thead class="table-light"><tr><th>Ürün</th><th>Fiyat</th><th>Adet</th><th>Tutar</th><th></th></tr></thead><tbody>`;
            items.forEach(item => {
                html += `<tr>
                    <td class="fw-bold">${item.productName}</td>
                    <td>${formatMoney(item.price)}</td>
                    <td>
                        <div class="input-group input-group-sm" style="width:100px">
                            <button class="btn btn-outline-secondary" onclick="updateQty(${item.detailId}, -1)">-</button>
                            <input type="text" class="form-control text-center" value="${item.quantity}" readonly>
                            <button class="btn btn-outline-secondary" onclick="updateQty(${item.detailId}, 1)">+</button>
                        </div>
                    </td>
                    <td class="fw-bold">${formatMoney(item.total)}</td>
                    <td><button class="btn btn-sm btn-danger" onclick="deleteItem(${item.detailId})"><i class="fas fa-trash"></i></button></td>
                </tr>`;
            });
            html += `</tbody></table>`;
            document.getElementById('orderDetails').innerHTML = html;
        }

        function formatMoney(amount) {
            return new Intl.NumberFormat('tr-TR', { style: 'currency', currency: 'TRY' }).format(amount);
        }

        function updateActionButtons(status) {
            var btnOcc = document.getElementById('btnMakeOccupied');
            var btnAva = document.getElementById('btnMakeAvailable');
            var btnRes = document.getElementById('btnMakeReserved');
            var secOrd = document.getElementById('orderSection');
            var btnPay = document.getElementById('btnPayment');

            // Hepsini gizle
            if(btnOcc) btnOcc.style.display = 'none';
            if(btnAva) btnAva.style.display = 'none';
            if(btnRes) btnRes.style.display = 'none';
            if(secOrd) secOrd.style.display = 'none';
            if(btnPay) btnPay.style.display = 'none';

            if (status === 'Boş') {
                if(btnOcc) btnOcc.style.display = 'inline-block';
                if(btnRes) btnRes.style.display = 'inline-block';
            } else if (status === 'Dolu') {
                if(btnAva) btnAva.style.display = 'inline-block';
                if(secOrd) secOrd.style.display = 'block';
                if(btnPay) btnPay.style.display = 'inline-block';
            } else if (status === 'Rezerve') {
                if(btnAva) btnAva.style.display = 'inline-block';
                if(btnOcc) btnOcc.style.display = 'inline-block';
            }
        }


            // --- OTOMATİK BİLDİRİM KONTROL SİSTEMİ ---
        setInterval(checkForHelpRequests, 5000); // 5 saniyede bir kontrol et

        function checkForHelpRequests() {
            fetch('/Tables/CheckNotifications')
                .then(res => res.json())
                .then(tables => {
                    // Önce tüm eski zilleri temizle
                    document.querySelectorAll('.help-badge').forEach(el => el.remove());

                    if (tables.length > 0) {
                        // Yardım isteyen masalar var!
                        tables.forEach(t => {
                            // Masanın kartını bul
                            var card = document.getElementById('table-card-' + t.id);
                            if (card) {
                                // Karta yanıp sönen bir zil ekle
                                if (!card.querySelector('.help-badge')) {
                                    var badge = document.createElement('div');
                                    badge.className = 'help-badge position-absolute top-0 start-50 translate-middle badge rounded-pill bg-warning text-dark shadow-sm border border-dark';
                                    badge.style.zIndex = '10';
                                    badge.innerHTML = '<i class="fas fa-bell fa-shake"></i> YARDIM!';
                                    card.appendChild(badge);

                                    // Kartın rengini mor yap (Dikkat çeksin)
                                    card.classList.add('border-warning', 'border-3');
                                }
                            }
                        });

                        // Sesli uyarı çal (Opsiyonel - Tarayıcı izin verirse)
                        // var audio = new Audio('/sounds/bell.mp3'); audio.play();
                    }
                });
        }

        // --- YARDIMI KAPATMA (Masa Detay Modalı Açılınca) ---
        // Garson masaya tıkladığında yardım isteği silinsin.
        // tableModalEl 'show.bs.modal' olayının içine şunu ekle (en üste):

        /* Mevcut kodunda:
           tableModalEl.addEventListener('show.bs.modal', function (event) { ...

           Bu bloğun içine şunu ekle:
        */
           var btn = event.relatedTarget;
           var tId = btn.getAttribute('data-table-id');
           // Yardımı veritabanından sil
           fetch(`/Tables/ResolveHelp/${tId}`, { method: 'POST' })
              .then(() => {
                  // Görsel temizlik
                  var card = document.getElementById('table-card-' + tId);
                  if(card) {
                      var badge = card.querySelector('.help-badge');
                      if(badge) badge.remove();
                      card.classList.remove('border-warning', 'border-3');
                  }
              });
    </script>
}