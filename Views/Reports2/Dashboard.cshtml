@model CafeOtomasyon.Models.StatsViewModel

@{
    ViewData["Title"] = "Genel İstatistikler";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4 fw-bold text-dark"><i class="fas fa-chart-pie me-2 text-primary"></i> Genel Durum Paneli</h2>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase fw-bold">Toplam Ciro</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalRevenue.ToString("C0")</h2>
                        </div>
                        <i class="fas fa-wallet fa-3x opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-primary text-white shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase fw-bold">Yıldız Ürün 🏆</h6>
                            <h4 class="fw-bold mb-0 text-truncate" style="max-width: 200px;">@Model.BestSellingProductName</h4>
                            <small>@Model.BestSellingProductCount adet satıldı</small>
                        </div>
                        <i class="fas fa-trophy fa-3x opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-secondary text-white shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase fw-bold">Geliştirilmeli 📉</h6>
                            <h4 class="fw-bold mb-0 text-truncate" style="max-width: 200px;">@Model.LeastSellingProductName</h4>
                            <small>@Model.LeastSellingProductCount adet satıldı</small>
                        </div>
                        <i class="fas fa-arrow-down fa-3x opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white fw-bold py-3"><i class="fas fa-users me-2 text-info"></i> Kullanıcı Dağılımı</div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-3">
                            <h3 class="fw-bold text-danger">@Model.AdminCount</h3>
                            <small class="text-muted">Yönetici</small>
                        </div>
                        <div class="col-3 border-start">
                            <h3 class="fw-bold text-warning">@Model.CashierCount</h3>
                            <small class="text-muted">Kasiyer</small>
                        </div>
                        <div class="col-3 border-start">
                            <h3 class="fw-bold text-primary">@Model.WaiterCount</h3>
                            <small class="text-muted">Garson</small>
                        </div>
                        <div class="col-3 border-start">
                            <h3 class="fw-bold text-success">@Model.CustomerCount</h3>
                            <small class="text-muted">Müşteri</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white fw-bold py-3"><i class="fas fa-box-open me-2 text-warning"></i> Envanter Özeti</div>
                <div class="card-body d-flex justify-content-around align-items-center">
                    <div class="text-center">
                        <h2 class="fw-bold">@Model.TotalCategoryCount</h2>
                        <span class="badge bg-light text-dark border">Kategori</span>
                    </div>
                    <div class="text-center">
                        <h2 class="fw-bold">@Model.TotalProductCount</h2>
                        <span class="badge bg-light text-dark border">Ürün Çeşidi</span>
                    </div>
                    <div class="text-center">
                        <h2 class="fw-bold">@Model.TotalOrderCount</h2>
                        <span class="badge bg-light text-dark border">Toplam Sipariş</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-list-ol me-2"></i> Ürün Satış Performansı</h5>
            <small class="text-muted">Çok satandan aza doğru sıralı</small>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Ürün Adı</th>
                        <th>Kategori</th>
                        <th class="text-center">Satış Adedi</th>
                        <th class="text-end pe-4">Toplam Kazanç</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductStats)
                    {
                        // Basit bir Progress Bar hesaplaması (En çok satana göre oranla)
                        int maxSold = Model.BestSellingProductCount > 0 ? Model.BestSellingProductCount : 1;
                        int percentage = (int)((double)item.TotalSold / maxSold * 100);
                        string barColor = percentage > 50 ? "bg-success" : (percentage > 20 ? "bg-warning" : "bg-danger");

                        <tr>
                            <td class="ps-4 fw-bold">@item.ProductName</td>
                            <td><span class="badge bg-light text-dark border">@item.CategoryName</span></td>

                            <td class="text-center" style="width: 30%;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <span class="me-2 fw-bold">@item.TotalSold</span>
                                    <div class="progress flex-grow-1" style="height: 6px;">
                                        <div class="progress-bar @barColor" role="progressbar" style="width: @percentage%"></div>
                                    </div>
                                </div>
                            </td>

                            <td class="text-end pe-4 fw-bold text-success">
                                @item.TotalIncome.ToString("C2")
                            </td>
                        </tr>
                    }
                    @if (!Model.ProductStats.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">Henüz veri yok.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>