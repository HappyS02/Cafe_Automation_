@model CafeOtomasyon.Models.ProductModel

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<h1>Ürün Düzenle</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label">Ürün Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="CategoryId" class="control-label">Kategori</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Kategori Seçin --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Price" class="control-label">Fiyat</label>
                <input asp-for="Price" class="form-control" type="text" placeholder="0,00" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="ImageName" />

    <div class="mb-3">
        <label class="form-label">Ürün Görseli</label>
        <input asp-for="ImageUpload" type="file" class="form-control" accept="image/*" />
        
        @if (!string.IsNullOrEmpty(Model.ImageName))
        {
            <div class="mt-2">
                <small>Şu anki görsel:</small><br />
                <img src="~/img/products/@Model.ImageName" width="100" class="img-thumbnail" />
            </div>
        }
    </div>

           <!-- <div class="form-group form-check mb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> Aktif mi?
                </label>
            </div>
             -->
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // BU KOD, SAYFA YÜKLENDİKTEN SONRA ÇALIŞIR VE HATAYI ENGELLER
        $.validator.methods.number = function (value, element) {
            // Virgüllü sayıları da (10,50) geçerli sayı olarak kabul et
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)(?:,\d+)?$/.test(value);
        }

        // Aralık kontrolü (Range) için de virgülü noktaya çevirip kontrol et
        $.validator.methods.range = function (value, element, param) {
            var globalizedValue = value.replace(",", ".");
            return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
        }
    </script>
}