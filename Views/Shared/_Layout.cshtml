@using CafeOtomasyon.Data
@using System.Security.Claims

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kafe Otomasyon</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CafeOtomasyon.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <style>
        /* --- SİDEBAR (SOL MENÜ) AÇIK TEMA TASARIMI --- */

        /* 1. Menünün Genel Arka Planı (BEYAZ) */
        #sidebar-wrapper {
            background-color: #ffffff; /* Beyaz Zemin */
            min-height: 100vh;
            border-right: 1px solid #dee2e6; /* Sağda ince gri çizgi */
        }

        /* 2. Menü Başlığı (Logo Alanı) */
        .sidebar-heading {
            color: #333; /* Koyu Gri Yazı */
            font-weight: bold;
            letter-spacing: 1px;
            padding: 1.5rem 1.25rem;
            font-size: 1.2rem;
            border-bottom: 1px solid #dee2e6;
            text-transform: uppercase;
            background-color: #f8f9fa; /* Başlık azıcık gri olsun */
        }

        /* 3. Linklerin Normal Hali */
        .list-group-item {
            background-color: transparent !important;
            color: #495057 !important; /* Yazı Rengi: Koyu Gri */
            border: none !important;
            border-bottom: 1px solid #f0f0f0 !important; /* Altlarına çok silik çizgi */
            padding: 15px 20px;
            font-weight: 500;
            transition: all 0.3s ease; /* Hareket efekti */
            border-left: 4px solid transparent !important; /* Sol çizgi gizli */
        }

            /* 4. HOVER EFEKTİ (Fare Üzerine Gelince) */
            .list-group-item:hover {
                background-color: #fff3cd !important; /* Zemin çok açık SARI (veya gri istersen #f8f9fa yap) */
                color: #000 !important; /* Yazı Tam SİYAH */
                border-left: 4px solid #ffc107 !important; /* Solda belirgin SARI çizgi */
                padding-left: 25px; /* Sağa kayma efekti */
                cursor: pointer;
            }

            /* 5. İkonların Hareketi */
            .list-group-item i {
                width: 25px;
                color: #6c757d; /* İkonlar başta gri */
                transition: transform 0.3s;
            }

            /* Hover olunca ikon */
            .list-group-item:hover i {
                transform: scale(1.2); /* Büyür */
                color: #ffc107; /* Sarı olur */
            }

            /* Aktif Sayfa */
            .list-group-item.active {
                background-color: #ffc107 !important; /* Sarı Zemin */
                color: #000 !important; /* Siyah Yazı */
                font-weight: bold;
                border-left: 4px solid #000 !important;
                border-color: #ffc107 !important;
            }
    </style>
</head>

<body>
    <div class="d-flex" id="wrapper">

        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading fw-bold text-primary">Kafe Menü </div>
            <div class="list-group list-group-flush">

                @* --- YÖNETİCİ Kasiyer MENÜLERİ --- *@
                @if (User.IsInRole(AppRoles.Yönetici) || User.IsInRole(AppRoles.Kasiyer))
                {
                    <a asp-controller="Tables" asp-action="FloorPlan" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-th-large me-2"></i> Kat Planı
                    </a>

                    <a asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-tags me-2"></i> Kategoriler
                    </a>

                    <a asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-utensils me-2"></i> Ürünler
                    </a>

                    <a asp-controller="Tables" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-chair me-2"></i> Masa Yönetimi
                    </a>

                    <a asp-controller="Orders" asp-action="ActiveOrders" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-clipboard-list me-2"></i> Aktif Siparişler
                    </a>

                    <a asp-controller="Orders" asp-action="History" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-history me-2"></i> Sipariş Geçmişi
                    </a>

                    <a asp-controller="Reports" asp-action="DailySales" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-chart-line me-2"></i> Günlük Rapor
                    </a>
                }

                @* --- SADECE YÖNETİCİ --- *@
                @if (User.IsInRole(AppRoles.Yönetici))
                {
                    @* --- <a asp-controller="Tables" asp-action="QrList" class="list-group-item list-group-item-action">
                        <i class="fas fa-qrcode me-2"></i> QR Kod Oluştur
                    </a> --- *@
                    
                    <a asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-user-shield me-2"></i> Kullanıcı Yönetimi
                    </a>
                    <a asp-controller="Reports2" asp-action="Dashboard" class="list-group-item list-group-item-action bg-light text-primary fw-bold">
                        <i class="fas fa-chart-line me-2"></i> İstatistikler
                    </a>
                }

                @* --- SADECE GARSON --- *@
                @if (User.IsInRole(AppRoles.Garson))
                {
                    <a asp-controller="Tables" asp-action="FloorPlan" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-th-large me-2"></i> Kat Planı
                    </a>
                    <a asp-controller="Orders" asp-action="ActiveOrders" class="list-group-item list-group-item-action bg-light">
                        <i class="fas fa-clipboard-list me-2"></i> Aktif Siparişler
                    </a>
                }
                
                @* --- HERKESİN (MÜŞTERİ DAHİL) GÖRECEĞİ MENÜ --- *@
                <div class="sidebar-heading mt-3 border-top pt-2">Müşteri Alanı</div>
                
                <a asp-controller="Home" asp-action="Menu" class="list-group-item list-group-item-action bg-light fw-bold text-primary">
                    <i class="fas fa-book-open me-2"></i> Menü & Değerlendirme
                </a>



            </div>
        </div>
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-bars"></i></button>

                    <a class="navbar-brand mx-auto fw-bold" href="#">
                        @(User.IsInRole(AppRoles.Musteri) ? "Hoş Geldiniz" : "Yönetim Paneli")
                    </a>

                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                    <small class="text-muted">
                                        (@(User.IsInRole(AppRoles.Yönetici) ? "Yönetici" : 
                                           User.IsInRole(AppRoles.Kasiyer) ? "Kasiyer" : "Müşteri"))
                                    </small>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <div class="dropdown-divider"></div>
                                    <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                                        </button>
                                    </form>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>

            <main role="main" class="container-fluid p-4">
                @RenderBody()
            </main>

        </div>
        </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // jQuery Validate virgül (,) sorununu çözen kod
        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)(?:,\d+)?$/.test(value);
        }
        
        $.validator.methods.range = function (value, element, param) {
            var globalizedValue = value.replace(",", ".");
            return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
        }

        // Menü toggle butonu
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>