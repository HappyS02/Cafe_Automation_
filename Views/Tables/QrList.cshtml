@model IEnumerable<CafeOtomasyon.Models.TableModel>

@{
    ViewData["Title"] = "Masa QR Kodları";
}

<style>
    @@media print {
        body * {
            visibility: hidden;
        }

        #printableArea, #printableArea * {
            visibility: visible;
        }

        #printableArea {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        .no-print {
            display: none !important;
        }
    }

    .qr-card {
        border: 2px dashed #ccc;
        background: #fff;
        page-break-inside: avoid; /* Yazıcıda kartı ortadan bölmesin */
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <h2><i class="fas fa-qrcode text-dark"></i> Masa QR Kodları</h2>
        <button onclick="window.print()" class="btn btn-primary btn-lg shadow">
            <i class="fas fa-print me-2"></i> Bu Sayfayı Yazdır
        </button>
    </div>

    <div class="row g-4" id="printableArea">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 text-center">
                <div class="qr-card p-4 rounded-3">
                    <h4 class="fw-bold text-uppercase mb-3">@item.Name</h4>

                    <img src="@Url.Action("GenerateQr", "Tables", new { tableId = item.Id })"
                         width="200" height="200"
                         class="img-fluid mb-3"
                         alt="QR Kodu" />

                    <p class="small text-muted mb-0">Menüyü görmek için okutunuz</p>
                    <div class="mt-2 fw-bold text-primary small">KAFE OTOMASYON</div>
                </div>
            </div>
        }
    </div>
</div>