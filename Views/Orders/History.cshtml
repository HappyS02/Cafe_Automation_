@model IEnumerable<CafeOtomasyon.Models.OrderModel>

@{
    ViewData["Title"] = "Geçmiş Siparişler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-secondary"><i class="fas fa-history"></i> Sipariş Geçmişi</h2>
        <span class="badge bg-secondary">Toplam: @Model.Count()</span>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning shadow-sm">
            <i class="fas fa-info-circle me-2"></i> Henüz tamamlanmış (ödenmiş) bir sipariş bulunmuyor.
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Masa</th>
                            <th>Açılış Tarihi</th>
                            <th>Kapanış Tarihi</th>
                            <th class="text-end">Tutar</th>
                            <th class="text-center">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@(item.Table?.Name ?? "Silinmiş Masa")</td>
                                <td>@item.OpenTime.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.CloseTime?.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="text-end fw-bold text-success">@item.TotalAmount.ToString("C2")</td>
                                <td class="text-center">
                                    <a asp-action="PrintReceipt" asp-route-id="@item.Id" target="_blank" class="btn btn-sm btn-outline-dark" title="Tekrar Yazdır">
                                        <i class="fas fa-print"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detay Gör">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>