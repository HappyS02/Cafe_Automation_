@model List<CategoryModel>

@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h1>Kategori Yönetimi</h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Kategori Ekle</a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-10">
                    <input type="text" name="searchString" class="form-control" placeholder="Kategori adıyla filtrele..." value="@ViewData["CurrentFilter"]" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-info w-100"><i class="fas fa-search"></i> Ara</button>
                </div>
            </div>
        </form>
    </div>
</div>


<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Kategori Adı</th>
            <th style="width: 150px;">Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm" title="Düzenle">
                        <i class="fas fa-pencil-alt"></i> Düzenle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>