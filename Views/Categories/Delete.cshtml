@model CafeOtomasyon.Models.CategoryModel

@{
    ViewData["Title"] = "Kategoriyi Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Silme Onayı</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Bu kategoriyi silmek istediğinize emin misiniz?</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Kategori Adı:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                        <dt class="col-sm-4">Durum:</dt>
                        <dd class="col-sm-8">
                            @(Model.IsActive ? "Aktif" : "Pasif")
                        </dd>
                    </dl>

                    <div class="alert alert-warning mt-3">
                        <small>Dikkat: Bu kategoriyi silerseniz, bu kategoriye bağlı ürünler kategorisiz kalabilir!</small>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-between mt-4">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        <button type="submit" class="btn btn-danger">Evet, Sil</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>